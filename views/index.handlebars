<div class="container">

    <div class="row">
      <h1>EAT DA BURGER!</h1>
    </div>

    <div class="row">
        <div class="col s6">
          <ul>
            {{#each burgerToDevour}}
              <h2> {{id}} {{burger_name}} </h2>
              <!-- button for devour -->
              <h3>DEVOUR IT!</h3>
            {{/each}}
          </ul>
        </div>

        <div class="col s6">
          <ul>
            {{#each devoured}}
              <h2> {{id}} {{burger_name}} </h2>
            {{/each}}
          </ul>
        </div>
    </div>

    <div class="row">
      <div class="col s12">
        <form>

          <div class="form-group">
            <label for="burgerInput">Choose Wisely</label>
            <input type="text" class="form-control" id="burgerInput" placeholder="TYPE IN BURGER HERE.">
          </div>

          <button type="submit" class="btn btn-default" id="submitBtn">Submit</button>

        </form>
      </div>
    </div>


</div>
<script src="../public/assets/app.js"></script>
